<!DOCTYPE html>
<html>
  <head>
    <title>Budget</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <section>
      <div>

        <h1>Add A New Category</h1>
        <%= form_with html: {'data-turbo' => "false"}, model: @groups do |f| %>

        <div>
          <%= f.label :name %>
          <%= f.text_field :name, required: true %>
        </div>

        <div>
          <%= f.label :icon %>
          <%= f.text_field :icon, required: true %>
        </div>

        <div>
          <%= f.submit "Create Category" %>
        </div>

      <% end %>
      <%= link_to '/', :remote => true do %>
        <input type="button" value="Back">
      <% end %> 
    </div>
  </section>
</body>
</html>