<!DOCTYPE html>
<html>
  <head>
    <title>BudgetApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <section>
    <div>

    <h1>Add New Transaction</h1>

<%= form_with model: @entity do |f| %>

  <div>
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
  </div>

  <div>
      <%= f.label :amount %>
      <%= f.number_field :amount, min: 1, required: true %>
  </div>

      <div>
      <%= f.fields_for(@relation) do |r| %>
      <%= r.label :group%>
      <%= r.select :group_id, current_user.groups.collect { |group| [group.name, group.id]}, {include_blank: true}, required: true %>
     <% end %>   
    </div>

  <div>
      <%= f.submit %>
  </div>

<% end %>
<%
=begin%>
 <%= link_to group_entities_path(@group.id), :remote => true do %>
  <input type="button" value="Back">
<% end %>  
<%
=end%>

    </div>
    </section>


  </body>
</html>