<%= render "partials/navbar" %>

<section>
    <%@groups.each do |group|%>
      <div class = "body-flex">
        <div class="img-cover align-self">
          <img src=<%=group.icon%> alt="icon">
        </div>
        <div class="name-cover">
          <%= link_to group_path(group.id), :remote => true do %>
            <h3 class="group-name"><%=group.name%></h3>
          <%end%>
        </div>
        <div>
          <h3 class="group-cover">$<%=Group.total(group.id)%>.00</h3> 
        </div>
        <div class="align-self">
          <p class="group-cover"><%=group.created_at%></p>
        </div>
        <div class="button-cover">
          <%= button_to "Delete", group_path(group.id), html: {'data-turbo' => "false"}, :method => :delete %>
        </div>
      </div>
    <%end%>
</section>

<div id="add-category-cover">
  <%= link_to new_group_path,  :remote => true do %>
    <input type="button" value="Add Category">
  <% end %>
</div>
